              %option 大分県
              %option 宮崎県
              %option 鹿児島県
              %option 沖縄県
            %i.icon-arrow-bottom
        .form-group
          %label{for: "city"} 市区町村
          %span.form-arbitrary 任意
          %input.input-default{name: "city", placeholder: "例) 横浜市緑区", type: "text", value: "大和郡山市"}/
        .form-group
          %label{for: "address1_label"} 番地
          %span.form-arbitrary 任意
          %input.input-default{name: "address1", placeholder: "例) 青山1−1−1", type: "text", value: "新町 840の2"}/
        .form-group
          %label{for: "address2_label"} 建物名
          %span.form-arbitrary 任意
          %input.input-default{name: "address2", placeholder: "例) 柳ビル103", type: "text", value: ""}/
        %button.btn-default.btn-red{type: "submit"} 登録する
