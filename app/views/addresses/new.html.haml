= render 'shared/headerNewUser'
%main.single-main
  %section.l--single
    %h2.l--single--head お届け先住所入力
    .l--single--inner
      .form-group
        %label{for: "nickname"} お名前
        %span.form-require 必須
        %input{type: "text", name: "nickname", placeholder: "例）山田太郎", class: "input-default"}
      .form-group
        %label{for: "email"} お名前カナ
        %span.form-require 必須
        %input{type: "email", name: "email", placeholder: "ヤマダタロウ", class: "input-default"}
      .form-group
        %label{for: "password"} 郵便番号
        %span.form-require 必須
        %input{type: "password", name: "password", placeholder: "123-4567", class: "input-default"}
      .form-group
        %label{for: "password"}  都道府県
        %span.form-require 必須
        %input{type: "password", name: "password", placeholder: "", class: "input-default"}
      .form-group
        %label{for: "email"} 市区町村　番地
        %span.form-require 必須
        %input{type: "email", name: "email", placeholder: "", class: "input-default"}
      .form-group
        %label{for: "email"} 電話
        %span.form-require 必須
        %input{type: "email", name: "email", placeholder: "例）09012345678", class: "input-default"}

    .l--single--inner
      %button.btn-default.btn-red 次へ進む

